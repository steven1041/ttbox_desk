{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for main window",
  "windows": ["main"],
  "permissions": [
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "updater:default",
    "core:default",
    "shell:allow-open"
  ],
  "remoteDomainIpc": [
    {
      "domain": "github.com",
      "plugins": ["updater"]
    },
    {
      "domain": "hk.gh-proxy.org",
      "plugins": ["updater"]
    }
  ]
}
