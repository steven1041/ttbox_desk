{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "说话岛助手",
  "version": "0.1.2",
  "identifier": "com.stone.ttbox",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "说话岛助手",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/icon.svg",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": ["zh-CN"]
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["SimpChinese"],
        "installerIcon": "icons/icon.ico"
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFMjI1RTQyQUUzQkEzQjUKUldTMW96dXVRbDRpenE0amVkUlBIcEpiY1NQM01ZaTBJYlQrcXFTc1Q0L0NCWnZncUFhbFFuWjIK"
    }
  }
}
